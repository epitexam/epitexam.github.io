---
export interface Props {
  icon: string;
  name: string;
  description: string;
}

const { icon, name, description } = Astro.props;
---

<div class="tool-card group">
  <div class="scanline"></div>
  <div class="tool-inner">
    <div class="tool-icon-container">
      <span class="tool-icon-text">{icon}</span>
    </div>

    <div class="tool-content">
      <h3 class="tool-title">{name}</h3>
      <p class="tool-description">{description}</p>
    </div>
  </div>
</div>

<style>
  .tool-card {
    position: relative;
    width: 100%;
    height: 100%;
    padding: 1.25rem;
    background: linear-gradient(
      145deg,
      rgba(var(--bg), 1) 0%,
      rgba(var(--accent), 0.08) 100%
    );
    border: 1px solid rgba(var(--accent), 0.15);
    border-radius: var(--radius-md);
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
    isolation: isolate;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
  }

  .tool-card:hover {
    transform: translateY(-3px);
    border-color: rgba(var(--accent), 0.4);
    box-shadow: 0 10px 30px -10px rgba(var(--accent), 0.3);
  }

  .scanline {
    position: absolute;
    top: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(var(--accent), 0.08),
      transparent
    );
    z-index: 2;
    pointer-events: none;
  }

  .tool-card:hover .scanline {
    animation: scan 2.5s linear infinite;
  }

  @keyframes scan {
    from {
      top: -100%;
    }
    to {
      top: 100%;
    }
  }

  .tool-inner {
    display: flex;
    align-items: flex-start;
    text-align: left;
    gap: 1.25rem;
    z-index: 3;
    position: relative;
  }

  .tool-icon-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    min-width: 3rem;
    min-height: 3rem;
    background: rgba(var(--bg), 0.8);
    border: 1px solid rgba(var(--accent), 0.3);
    border-radius: var(--radius-sm);
    flex-shrink: 0;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .tool-icon-text {
    font-size: 1.15rem;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tool-card:hover .tool-icon-container {
    border-color: rgb(var(--accent));
    box-shadow: 0 0 15px rgba(var(--accent), 0.3);
    transform: scale(1.05) rotate(-3deg);
  }

  .tool-content {
    flex: 1;
    min-width: 0;
  }

  .tool-title {
    margin: 0 0 0.35rem 0 !important;
    font-family: var(--font-title);
    font-size: 1.1rem !important;
    color: rgb(var(--text));
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .tool-card:hover .tool-title {
    color: rgb(var(--accent));
  }

  .tool-description {
    margin: 0 !important;
    font-size: 0.9rem !important;
    line-height: 1.5 !important;
    color: rgba(var(--text), 0.6);
    word-wrap: break-word;
    white-space: normal;
  }

  @media (max-width: 640px) {
    .tool-card {
      padding: 1rem;
    }

    .tool-inner {
      gap: 1rem;
    }

    .tool-icon-container {
      width: 2.5rem;
      height: 2.5rem;
      min-width: 2.5rem;
      min-height: 2.5rem;
    }

    .tool-icon-text {
      font-size: 0.9rem;
    }

    .tool-title {
      font-size: 1rem !important;
    }

    .tool-description {
      font-size: 0.85rem !important;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .tool-card:hover .scanline {
      animation: none;
    }
    .tool-card,
    .tool-icon-container {
      transition: none !important;
    }
  }
</style>
