---
export interface Props {
  icon: string;
  name: string;
  description: string;
}

const { icon, name, description } = Astro.props;
---

<div class="tool-card animate-fadeIn group">
  <div class="tool-glow"></div>

  <div class="tool-inner">
    <div class="tool-icon">
      {icon}
    </div>

    <div class="tool-content">
      <h3 class="tool-title group-hover:text-[rgb(var(--accent))]">{name}</h3>
      <p class="tool-description">{description}</p>
    </div>
  </div>

  <div class="tool-reflection"></div>
</div>

<style>
  .tool-card {
    position: relative;
    display: block;
    width: 100%;
    border-radius: 1rem;
    border: 1px solid rgba(var(--accent), 0.2);
    background: radial-gradient(
        ellipse at top left,
        rgba(25, 35, 30, 0.35),
        rgba(10, 15, 10, 0.15) 70%
      ),
      linear-gradient(135deg, rgba(var(--accent), 0.05) 0%, transparent 50%);
    padding: 1rem;
    cursor: pointer;
    overflow: hidden;
    transition:
      transform 0.2s ease,
      border-color 0.2s ease;
    isolation: isolate;
    margin: 0 auto;
  }

  @media (min-width: 769px) {
    .tool-card {
      padding: clamp(1rem, 4vw, 1.5rem);
      backdrop-filter: blur(14px) saturate(160%);
    }

    .tool-card::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(var(--accent), 0.05),
        transparent
      );
      transition: left 0.6s ease;
      z-index: -1;
    }

    .tool-card:hover::before {
      left: 100%;
    }
  }

  @media (hover: hover) and (min-width: 769px) {
    .tool-card:hover {
      transform: translateY(-4px);
      border-color: rgba(var(--accent), 0.4);
      box-shadow:
        0 10px 30px rgba(var(--accent), 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
  }

  .tool-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  @media (min-width: 641px) {
    .tool-inner {
      flex-direction: row;
      align-items: flex-start;
    }
  }

  .tool-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.6rem;
    font-size: 1rem;
    color: rgb(var(--accent));
    background: radial-gradient(
        circle at top left,
        rgba(var(--accent), 0.15),
        rgba(var(--accent), 0.05)
      ),
      conic-gradient(from 0deg, rgba(var(--accent), 0.1) 0%, transparent 50%);
    border: 1px solid rgba(var(--accent), 0.3);
    transition: all 0.3s ease;
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 769px) {
    .tool-icon {
      width: clamp(2.5rem, 8vw, 3.25rem);
      height: clamp(2.5rem, 8vw, 3.25rem);
      font-size: clamp(1rem, 4vw, 1.3rem);
    }

    .tool-icon::before {
      content: "";
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: conic-gradient(
        transparent,
        rgba(var(--accent), 0.1),
        transparent 30%
      );
      animation: rotate 4s linear infinite;
    }
  }

  @media (hover: hover) and (min-width: 769px) {
    .tool-card:hover .tool-icon {
      transform: scale(1.05);
      box-shadow:
        0 0 20px rgba(var(--accent), 0.3),
        inset 0 0 10px rgba(var(--accent), 0.1);
    }
  }

  .tool-content {
    text-align: center;
    position: relative;
  }

  @media (min-width: 641px) {
    .tool-content {
      text-align: left;
    }
  }

  .tool-title {
    font-weight: 700;
    font-size: 1rem;
    line-height: 1.3;
    color: rgb(var(--text));
    transition: color 0.2s ease;
    position: relative;
    display: inline-block;
  }

  @media (min-width: 769px) {
    .tool-title {
      font-size: clamp(1rem, 2.5vw, 1.2rem);
    }

    .tool-title::after {
      content: "";
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 1px;
      background: rgb(var(--accent));
      transition: width 0.3s ease;
    }
  }

  @media (hover: hover) and (min-width: 769px) {
    .tool-card:hover .tool-title {
      color: rgb(var(--accent));
    }

    .tool-card:hover .tool-title::after {
      width: 100%;
    }
  }

  .tool-description {
    color: rgba(200, 230, 200, 0.8);
    font-size: 0.85rem;
    line-height: 1.6;
    transition: color 0.2s ease;
  }

  @media (min-width: 769px) {
    .tool-description {
      font-size: clamp(0.85rem, 2.2vw, 0.95rem);
    }
  }

  @media (hover: hover) and (min-width: 769px) {
    .tool-card:hover .tool-description {
      color: rgba(220, 255, 220, 0.95);
    }
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }

    to {
      transform: rotate(360deg);
    }
  }
</style>
