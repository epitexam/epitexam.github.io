---
import type { Project } from "../types/github";

export interface Props {
    project: Project;
}

const { project } = Astro.props;
import { Image } from "astro:assets";
---

<a
    href={project.html_url}
    target="_blank"
    rel="noopener noreferrer"
    class="project-card"
>
    <div class="smoke-layer"></div>

    <header class="project-header">
        <div class="owner-info">
            <Image
                src={project.owner.avatar_url}
                alt={`${project.owner.login} avatar`}
                width={56}
                height={56}
                loading="lazy"
                decoding="async"
                class="avatar"
            />
            <span class="project-name">{project.name}</span>
        </div>

        {
            project.language && (
                <span class="language-badge">{project.language}</span>
            )
        }
    </header>

    <p class="project-description">
        {project.description || "No description provided."}
    </p>

    <footer class="project-footer">
        <span>‚≠ê {project.stargazers_count}</span>
        <span>üìÖ {new Date(project.pushed_at).toLocaleDateString()}</span>
    </footer>
</a>

<style>
    .project-card {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding: 1.2rem 1.4rem;
        border-radius: 1rem;
        border: 1px solid rgba(0, 255, 150, 0.25);
        background: rgba(10, 20, 15, 0.5);
        color: rgb(var(--text));
        text-decoration: none;
        overflow: hidden;
        cursor: pointer;
        isolation: isolate;
        will-change: transform;
        transition:
            transform 0.35s ease,
            box-shadow 0.35s ease,
            border-color 0.35s ease;
        box-shadow:
            inset 0 0 12px rgba(0, 255, 150, 0.05),
            0 0 15px rgba(0, 255, 150, 0.08);
    }

    .smoke-layer {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 22%;
        background: radial-gradient(
                circle at 40% 100%,
                rgba(0, 255, 150, 0.15) 0%,
                transparent 70%
            ),
            radial-gradient(
                circle at 70% 100%,
                rgba(0, 180, 100, 0.12) 0%,
                transparent 80%
            );
        opacity: 0.25;
        filter: blur(10px);
        transform: translateY(0);
        animation: smokeFlow 14s linear infinite alternate;
        z-index: -1;
    }

    @keyframes smokeFlow {
        0% {
            transform: translateX(-5%) translateY(2%);
        }
        50% {
            transform: translateX(6%) translateY(-1%);
        }
        100% {
            transform: translateX(-4%) translateY(1%);
        }
    }

    .project-card::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
            115deg,
            transparent 0%,
            rgba(0, 255, 150, 0.15) 45%,
            rgba(255, 255, 255, 0.08) 50%,
            transparent 55%
        );
        mix-blend-mode: screen;
        opacity: 0;
        transition: opacity 0.6s ease;
        z-index: 0;
    }
    .project-card:hover::after {
        opacity: 0.35;
    }

    .project-card:hover {
        transform: translateY(-4px) scale(1.015);
        border-color: rgba(0, 255, 150, 0.4);
        box-shadow:
            0 0 25px rgba(0, 255, 150, 0.18),
            inset 0 0 15px rgba(0, 255, 150, 0.08);
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.6rem;
    }

    .owner-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .avatar {
        width: 1.9rem;
        height: 1.9rem;
        border-radius: 50%;
        border: 1px solid rgba(0, 255, 150, 0.25);
        transition: transform 0.3s ease;
    }
    .project-card:hover .avatar {
        transform: scale(1.07);
    }

    .project-name {
        font-weight: 600;
        letter-spacing: 0.02em;
        color: rgb(var(--text));
        transition: color 0.3s ease;
    }
    .project-card:hover .project-name {
        color: rgb(0, 255, 150);
    }

    .language-badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.6rem;
        border-radius: 0.6rem;
        border: 1px solid rgba(0, 255, 150, 0.25);
        color: rgb(0, 255, 150);
        background: rgba(0, 255, 150, 0.08);
    }

    .project-description {
        font-size: 0.9rem;
        color: rgba(220, 255, 220, 0.9);
        line-height: 1.5;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .project-footer {
        display: flex;
        justify-content: space-between;
        font-size: 0.8rem;
        color: rgba(200, 255, 200, 0.7);
    }

    @media (max-width: 480px) {
        .project-card {
            padding: 1rem;
            border-color: rgba(0, 255, 150, 0.2);
            background: rgba(10, 20, 15, 0.4);
            box-shadow: none;
        }

        .smoke-layer {
            height: 14%;
            opacity: 0.15;
            animation: none;
        }
    }
</style>
