---
export interface Props {
    project: {
        id: number;
        name: string;
        description: string;
        html_url: string;
        language: string | null;
        stargazers_count: number;
        pushed_at: string;
        owner: {
            login: string;
            avatar_url: string;
        };
    };
}

const { project } = Astro.props;
---

<a
    href={project.html_url}
    target="_blank"
    rel="noopener noreferrer"
    class="project-card"
    data-lang={project.language ?? "Default"}
>
    <div class="project-header">
        <div class="owner-info">
            <img
                src={project.owner.avatar_url}
                alt={`${project.owner.login} avatar`}
                class="avatar"
            />
            <span class="project-name">{project.name}</span>
        </div>

        {
            project.language && (
                <span class="language-badge">{project.language}</span>
            )
        }
    </div>

    <p class="project-description">
        {project.description || "No description provided."}
    </p>

    <div class="project-footer">
        <span>‚≠ê {project.stargazers_count}</span>
        <span>üìÖ {new Date(project.pushed_at).toLocaleDateString()}</span>
    </div>
</a>

<style>
    .project-card {
        position: relative;
        display: block;
        padding: 1.25rem;
        border-radius: 1rem;
        border: 1px solid rgba(0, 255, 150, 0.25);
        color: rgb(var(--text));
        text-decoration: none;

        background: linear-gradient(
            135deg,
            rgba(15, 25, 20, 0.55) 0%,
            rgba(10, 15, 12, 0.25) 100%
        );
        backdrop-filter: blur(18px) saturate(160%);
        box-shadow:
            inset 0 0 20px rgba(0, 255, 150, 0.06),
            0 0 20px rgba(0, 255, 150, 0.08);

        transition:
            transform 0.45s cubic-bezier(0.22, 1, 0.36, 1),
            box-shadow 0.45s ease,
            border-color 0.4s ease;
        overflow: hidden;
        cursor: pointer;
    }

    .project-card::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
            120deg,
            transparent 0%,
            rgba(0, 255, 150, 0.12) 40%,
            rgba(0, 255, 150, 0.05) 60%,
            transparent 100%
        );
        filter: blur(2px);
        transform: translateX(-150%) skewX(-10deg);
        animation: shimmer 8s infinite ease-in-out;
        pointer-events: none;
    }

    .project-card::after {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: inherit;
        background: radial-gradient(
            ellipse at top,
            rgba(255, 255, 255, 0.04),
            transparent 70%
        );
        mix-blend-mode: overlay;
        opacity: 0.5;
        pointer-events: none;
    }

    .project-card::after {
        background-image: radial-gradient(
            rgba(255, 255, 255, 0.03) 1px,
            transparent 1px
        );
        background-size: 3px 3px;
        mix-blend-mode: overlay;
        opacity: 0.25;
    }

    .project-card:hover {
        transform: translateY(-6px) scale(1.02);
        border-color: rgba(0, 255, 150, 0.5);
        box-shadow:
            0 10px 35px rgba(0, 255, 150, 0.2),
            inset 0 0 25px rgba(0, 255, 150, 0.08);
    }

    .project-card {
        perspective: 1000px;
        transform-style: preserve-3d;
    }
    .project-card:hover {
        transform: rotateY(3deg) rotateX(-2deg) scale(1.02);
    }

    @keyframes shimmer {
        0% {
            transform: translateX(-150%) skewX(-10deg);
            opacity: 0.05;
        }
        50% {
            transform: translateX(150%) skewX(10deg);
            opacity: 0.1;
        }
        100% {
            transform: translateX(150%) skewX(10deg);
            opacity: 0;
        }
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.6rem;
        margin-bottom: 0.75rem;
    }

    .owner-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        min-width: 0;
    }

    .avatar {
        width: 1.8rem;
        height: 1.8rem;
        border-radius: 9999px;
        border: 1px solid rgba(0, 255, 150, 0.25);
        box-shadow: 0 0 8px rgba(0, 255, 150, 0.25);
        transition:
            box-shadow 0.3s ease,
            transform 0.3s ease;
    }
    .project-card:hover .avatar {
        transform: scale(1.1);
        box-shadow: 0 0 15px rgba(0, 255, 150, 0.45);
    }

    .project-name {
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: rgb(var(--text));
        letter-spacing: 0.01em;
        transition:
            color 0.3s ease,
            text-shadow 0.3s ease,
            letter-spacing 0.3s ease;
    }
    .project-card:hover .project-name {
        color: rgb(0, 255, 150);
        text-shadow: 0 0 10px rgba(0, 255, 150, 0.5);
        letter-spacing: 0.03em;
    }

    .language-badge {
        font-size: 0.75rem;
        background: rgba(0, 255, 150, 0.1);
        color: rgb(0, 255, 150);
        padding: 0.25rem 0.6rem;
        border-radius: 0.6rem;
        border: 1px solid rgba(0, 255, 150, 0.25);
        box-shadow: inset 0 0 6px rgba(0, 255, 150, 0.15);
    }

    .project-description {
        font-size: 0.9rem;
        color: rgba(200, 255, 200, 0.8);
        line-height: 1.5;
        margin-bottom: 0.75rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        transition:
            color 0.3s ease,
            transform 0.3s ease,
            opacity 0.3s ease;
    }
    .project-card:hover .project-description {
        color: rgba(220, 255, 220, 0.95);
        transform: translateY(-2px);
        opacity: 1;
    }

    .project-footer {
        display: flex;
        justify-content: space-between;
        font-size: 0.8rem;
        color: rgba(200, 255, 200, 0.6);
    }

    @media (max-width: 480px) {
        .project-card {
            padding: 0.9rem;
        }
        .project-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.25rem;
        }
        .project-footer {
            flex-direction: column;
            gap: 0.25rem;
            align-items: flex-start;
        }
    }
</style>
