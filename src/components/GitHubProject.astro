---
import type { Project } from "../types/github";

export interface Props {
    project: Project;
}

const { project } = Astro.props;
import { Image } from "astro:assets";
---

<a
    href={project.html_url}
    target="_blank"
    rel="noopener noreferrer"
    class="project-card group"
>
    <div class="smoke-layer"></div>

    <header class="project-header">
        <div class="owner-info">
            <Image
                src={project.owner.avatar_url}
                alt={`${project.owner.login} avatar`}
                width={32}
                height={32}
                loading="lazy"
                decoding="async"
                class="avatar"
            />
            <span class="project-name">{project.name}</span>
        </div>

        {
            project.language && (
                <span class="language-badge">{project.language}</span>
            )
        }
    </header>

    <p class="project-description">
        {project.description || "No description provided."}
    </p>

    <footer class="project-footer">
        <span>‚≠ê {project.stargazers_count}</span>
        <span>üìÖ {new Date(project.pushed_at).toLocaleDateString()}</span>
    </footer>
</a>

<style>
    .project-card {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding: 1.2rem 1.4rem;
        border-radius: 1rem;
        border: 1px solid rgba(var(--accent), 0.2);
        background: radial-gradient(
                ellipse at top left,
                rgba(25, 35, 30, 0.4),
                rgba(10, 15, 10, 0.2) 70%
            ),
            linear-gradient(
                135deg,
                rgba(var(--accent), 0.05) 0%,
                transparent 50%
            );
        color: rgb(var(--text));
        text-decoration: none;
        overflow: hidden;
        isolation: isolate;
        backdrop-filter: blur(12px);
        transition:
            transform 0.25s ease,
            border-color 0.25s ease,
            box-shadow 0.25s ease;
        box-shadow:
            inset 0 1px 0 rgba(255, 255, 255, 0.05),
            0 8px 25px rgba(0, 0, 0, 0.2);
    }

    .smoke-layer {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 30%;
        background: radial-gradient(
                ellipse at 40% 100%,
                rgba(var(--accent), 0.1) 0%,
                transparent 60%
            ),
            radial-gradient(
                ellipse at 70% 100%,
                rgba(var(--accent), 0.08) 0%,
                transparent 70%
            );
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: -1;
    }

    .project-card::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            rgba(var(--accent), 0.1) 0%,
            transparent 50%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: -1;
    }

    .project-card:hover {
        transform: translateY(-3px);
        border-color: rgba(var(--accent), 0.4);
        box-shadow:
            0 12px 30px rgba(var(--accent), 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .project-card:hover .smoke-layer,
    .project-card:hover::before {
        opacity: 1;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.6rem;
        flex-wrap: wrap;
    }

    .owner-info {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        min-width: 0;
    }

    .avatar {
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        border: 1px solid rgba(var(--accent), 0.3);
        flex-shrink: 0;
        transition: transform 0.2s ease;
    }

    .project-card:hover .avatar {
        transform: scale(1.1);
    }

    .project-name {
        font-weight: 600;
        font-size: 1.1rem;
        letter-spacing: 0.01em;
        color: rgb(var(--text));
        transition: color 0.2s ease;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .project-card:hover .project-name {
        color: rgb(var(--accent));
    }

    .language-badge {
        font-size: 0.75rem;
        padding: 0.3rem 0.7rem;
        border-radius: 0.75rem;
        border: 1px solid rgba(var(--accent), 0.3);
        color: rgb(var(--accent));
        background: rgba(var(--accent), 0.1);
        flex-shrink: 0;
        font-weight: 500;
    }

    .project-description {
        font-size: 0.9rem;
        color: rgba(220, 255, 220, 0.85);
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .project-footer {
        display: flex;
        justify-content: space-between;
        font-size: 0.8rem;
        color: rgba(200, 255, 200, 0.7);
        margin-top: auto;
    }

    @media (max-width: 640px) {
        .project-card {
            padding: 1rem;
            gap: 0.6rem;
        }

        .project-header {
            gap: 0.5rem;
        }

        .project-name {
            font-size: 1rem;
        }

        .project-description {
            font-size: 0.85rem;
            -webkit-line-clamp: 2;
        }
    }

    @media (max-width: 480px) {
        .project-card {
            border-color: rgba(var(--accent), 0.15);
        }

        .smoke-layer {
            display: none;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .project-card,
        .avatar {
            transition: none;
        }

        .project-card:hover {
            transform: none;
        }
    }
</style>
