---
export interface Props {
    project: {
        id: number;
        name: string;
        description: string;
        html_url: string;
        language: string | null;
        stargazers_count: number;
        pushed_at: string;
        owner: {
            login: string;
            avatar_url: string;
        };
    };
}

const { project } = Astro.props;
import { Image } from "astro:assets";
---

<a
    href={project.html_url}
    target="_blank"
    rel="noopener noreferrer"
    class="project-card"
>
    <div class="smoke"></div>
    <div class="smoke smoke--2"></div>
    <div class="smoke smoke--3"></div>

    <header class="project-header">
        <div class="owner-info">
            <Image
                src={project.owner.avatar_url}
                alt={`${project.owner.login} avatar`}
                width={64}
                height={64}
                loading="lazy"
                class="avatar"
            />

            <span class="project-name">{project.name}</span>
        </div>

        {
            project.language && (
                <span class="language-badge">{project.language}</span>
            )
        }
    </header>

    <p class="project-description">
        {project.description || "No description provided."}
    </p>

    <footer class="project-footer">
        <span>‚≠ê {project.stargazers_count}</span>
        <span>üìÖ {new Date(project.pushed_at).toLocaleDateString()}</span>
    </footer>
</a>

<style>
    .project-card {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        padding: 1.3rem 1.5rem;
        border-radius: 1.1rem;
        border: 1px solid rgba(0, 255, 150, 0.25);
        background: rgba(10, 20, 15, 0.45);
        backdrop-filter: blur(6px) saturate(180%);
        -webkit-backdrop-filter: blur(6px) saturate(180%);
        box-shadow:
            inset 0 0 20px rgba(0, 255, 150, 0.08),
            0 0 25px rgba(0, 255, 150, 0.06);
        color: rgb(var(--text));
        text-decoration: none;
        overflow: hidden;
        cursor: pointer;
        isolation: isolate;
        transition:
            transform 0.45s cubic-bezier(0.22, 1, 0.36, 1),
            box-shadow 0.45s ease,
            border-color 0.35s ease,
            background 0.35s ease;
    }

    /* === FUM√âE : PLUS BASSE, PLUS DYNAMIQUE === */
    .smoke {
        position: absolute;
        bottom: -5%;
        left: -50%;
        width: 200%;
        height: 45%;
        background: radial-gradient(
                circle at 20% 90%,
                rgba(0, 100, 60, 0.25) 0%,
                transparent 65%
            ),
            radial-gradient(
                circle at 80% 100%,
                rgba(0, 120, 70, 0.2) 0%,
                transparent 70%
            ),
            radial-gradient(
                circle at 50% 100%,
                rgba(0, 255, 150, 0.1) 0%,
                transparent 75%
            );
        opacity: 0.4;
        filter: blur(22px) contrast(140%) brightness(90%);
        mix-blend-mode: screen;
        mask-image: linear-gradient(to top, black 30%, transparent 100%);
        animation: smokeDrift 12s ease-in-out infinite alternate;
        z-index: -1;
    }

    .smoke--2 {
        animation: smokeDrift2 16s ease-in-out infinite alternate-reverse;
        opacity: 0.3;
        filter: blur(20px) contrast(160%) brightness(85%);
    }

    .smoke--3 {
        animation: smokeDrift3 20s ease-in-out infinite alternate;
        opacity: 0.25;
        filter: blur(25px) contrast(150%) brightness(75%);
    }

    /* mouvement plus fluide, style mar√©e agit√©e */
    @keyframes smokeDrift {
        0% {
            transform: translateX(-10%) translateY(0) scale(1.05);
        }
        50% {
            transform: translateX(8%) translateY(-2%) scale(1.08);
        }
        100% {
            transform: translateX(-6%) translateY(0) scale(1.04);
        }
    }
    @keyframes smokeDrift2 {
        0% {
            transform: translateX(12%) translateY(-1%) scale(1.1);
        }
        50% {
            transform: translateX(-10%) translateY(1%) scale(1.15);
        }
        100% {
            transform: translateX(6%) translateY(-1%) scale(1.1);
        }
    }
    @keyframes smokeDrift3 {
        0% {
            transform: translateX(-8%) translateY(0) scale(1.05);
        }
        50% {
            transform: translateX(8%) translateY(-2%) scale(1.08);
        }
        100% {
            transform: translateX(-6%) translateY(0) scale(1.04);
        }
    }

    /* === Reflet plus intense === */
    .project-card::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
            120deg,
            transparent 0%,
            rgba(0, 255, 150, 0.25) 45%,
            rgba(255, 255, 255, 0.15) 50%,
            transparent 55%
        );
        mix-blend-mode: screen;
        opacity: 0;
        transform: translateX(-120%) skewX(-15deg);
        animation: shine 7s infinite cubic-bezier(0.6, 0, 0.4, 1);
        pointer-events: none;
        z-index: 1;
    }
    @keyframes shine {
        0% {
            opacity: 0;
            transform: translateX(-120%) skewX(-15deg);
        }
        15% {
            opacity: 0.5;
        }
        60% {
            opacity: 0;
            transform: translateX(120%) skewX(-15deg);
        }
        100% {
            opacity: 0;
        }
    }

    .project-card:hover {
        transform: translateY(-6px) scale(1.03);
        border-color: rgba(0, 255, 150, 0.55);
        box-shadow:
            0 0 28px rgba(0, 255, 150, 0.25),
            inset 0 0 25px rgba(0, 255, 150, 0.12);
        background: rgba(10, 25, 18, 0.5);
    }
    .project-card:hover .smoke {
        opacity: 0.55;
        filter: blur(18px) contrast(160%) brightness(100%);
    }

    /* === Contenu === */
    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.6rem;
    }

    .owner-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .avatar {
        width: 1.9rem;
        height: 1.9rem;
        border-radius: 50%;
        border: 1px solid rgba(0, 255, 150, 0.25);
        box-shadow: 0 0 8px rgba(0, 255, 150, 0.2);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }
    .project-card:hover .avatar {
        transform: scale(1.1);
        box-shadow: 0 0 15px rgba(0, 255, 150, 0.4);
    }

    .project-name {
        font-weight: 600;
        letter-spacing: 0.02em;
        color: rgb(var(--text));
        transition:
            color 0.3s ease,
            text-shadow 0.3s ease;
    }
    .project-card:hover .project-name {
        color: rgb(0, 255, 150);
        text-shadow: 0 0 10px rgba(0, 255, 150, 0.4);
    }

    .language-badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.6rem;
        border-radius: 0.6rem;
        border: 1px solid rgba(0, 255, 150, 0.25);
        color: rgb(0, 255, 150);
        background: rgba(0, 255, 150, 0.1);
        box-shadow: inset 0 0 6px rgba(0, 255, 150, 0.1);
    }

    .project-description {
        font-size: 0.9rem;
        color: rgba(220, 255, 220, 0.9);
        line-height: 1.5;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        overflow: hidden;
        text-overflow: ellipsis;
        transition:
            color 0.3s ease,
            transform 0.3s ease;
    }
    .project-card:hover .project-description {
        color: rgba(240, 255, 240, 0.95);
        transform: translateY(-2px);
    }

    .project-footer {
        display: flex;
        justify-content: space-between;
        font-size: 0.8rem;
        color: rgba(200, 255, 200, 0.7);
    }

    @media (max-width: 480px) {
        .project-card {
            padding: 1rem;
        }
    }
</style>
