---
import type { Project } from "../types/github";

export interface Props {
    project: Project;
}

const { project } = Astro.props;
import { Image } from "astro:assets";
---

<a
    href={project.html_url}
    target="_blank"
    rel="noopener noreferrer"
    class="project-card group"
>
    <div class="smoke-layer"></div>

    <header class="project-header">
        <div class="owner-info">
            <Image
                src={project.owner.avatar_url}
                alt={`${project.owner.login} avatar`}
                width={36}
                height={36}
                loading="lazy"
                decoding="async"
                class="avatar"
            />
            <span class="project-name">{project.name}</span>
        </div>

        {
            project.language && (
                <span class="language-badge" data-language={project.language}>
                    {project.language}
                </span>
            )
        }
    </header>

    <p class="project-description">
        {project.description || "No description provided."}
    </p>

    <footer class="project-footer">
        <span class="stat-item stars">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
                <path
                    d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"
                ></path>
            </svg>
            <span class="stat-value">{project.stargazers_count}</span>
        </span>
        <span class="stat-item date">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
                <path
                    d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11zM5 7V6h14v1H5z"
                ></path>
            </svg>
            <span class="stat-value"
                >{new Date(project.pushed_at).toLocaleDateString()}</span
            >
        </span>
    </footer>
</a>

<style>
    .project-card {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding: 1.5rem;
        border-radius: 1.25rem;
        border: 1px solid rgba(var(--accent), 0.15);
        background: rgba(10, 14, 20, 0.95);
        color: rgb(var(--text));
        text-decoration: none;
        overflow: hidden;
        isolation: isolate;
        transition:
            transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1),
            border-color 0.3s ease,
            box-shadow 0.3s ease,
            background 0.3s ease;
        box-shadow:
            inset 0 1px 0 rgba(255, 255, 255, 0.08),
            0 8px 25px rgba(0, 0, 0, 0.5);
    }

    .smoke-layer {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 40%;
        background: radial-gradient(
                ellipse at 40% 100%,
                rgba(var(--accent), 0.15) 0%,
                transparent 60%
            ),
            radial-gradient(
                ellipse at 70% 100%,
                rgba(var(--accent), 0.1) 0%,
                transparent 70%
            );
        opacity: 0;
        transition: opacity 0.5s ease;
        z-index: -1;
    }

    .project-card::before {
        content: "";
        position: absolute;
        inset: -1px;
        background: rgba(var(--accent), 0.1);
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: -1;
        pointer-events: none;
    }

    .project-card:hover {
        transform: translateY(-5px);
        border-color: rgba(var(--accent), 0.7);
        background: rgba(10, 14, 20, 0.9);
        box-shadow:
            0 12px 35px rgba(0, 0, 0, 0.6),
            0 0 20px rgba(var(--accent), 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    .project-card:hover .smoke-layer,
    .project-card:hover::before {
        opacity: 1;
    }

    .project-card:hover .project-name {
        color: rgb(var(--accent));
        text-shadow: 0 0 10px rgba(var(--accent), 0.5);
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.8rem;
        flex-wrap: wrap;
    }

    .owner-info {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        min-width: 0;
    }

    .avatar {
        width: 2.25rem;
        height: 2.25rem;
        border-radius: 50%;
        border: 2px solid rgba(var(--accent), 0.4);
        flex-shrink: 0;
        transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .project-card:hover .avatar {
        transform: scale(1.15);
        box-shadow: 0 0 10px rgba(var(--accent), 0.5);
    }

    .project-name {
        font-family: "JetBrains Mono", ui-monospace, monospace;
        font-weight: 700;
        font-size: 1.25rem;
        letter-spacing: -0.02em;
        color: rgb(var(--text));
        transition:
            color 0.3s ease,
            text-shadow 0.3s ease;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .language-badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
        border-radius: 9999px;
        border: 1px solid rgba(var(--accent), 0.5);
        color: rgb(var(--accent));
        background: rgba(var(--accent), 0.15);
        flex-shrink: 0;
        font-weight: 600;
        text-shadow: 0 0 5px rgba(var(--accent), 0.2);
    }

    .project-description {
        font-size: 0.95rem;
        color: rgba(220, 255, 220, 0.9);
        line-height: 1.6;
        margin-top: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: calc(0.95rem * 1.6 * 3);
    }

    .project-footer {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        color: rgba(200, 255, 200, 0.8);
        margin-top: 1rem;
        padding-top: 0.5rem;
        border-top: 1px dashed rgba(var(--text), 0.1);
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-weight: 500;
    }

    .stat-item svg {
        color: rgb(var(--accent));
        opacity: 0.8;
    }

    .stat-value {
        color: rgb(var(--text));
        font-weight: 600;
    }

    @media (max-width: 640px) {
        .project-card {
            padding: 1.25rem;
            border-radius: 1rem;
        }

        .project-name {
            font-size: 1.1rem;
        }

        .project-description {
            font-size: 0.9rem;
        }

        .project-footer {
            font-size: 0.85rem;
        }

        .stat-item svg {
            width: 16px;
            height: 16px;
        }
    }

    @media (max-width: 480px) {
        .project-card {
            border-color: rgba(var(--accent), 0.2);
            padding: 1rem;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .project-card,
        .avatar {
            transition: none !important;
        }

        .project-card:hover {
            transform: none !important;
        }
    }
</style>
