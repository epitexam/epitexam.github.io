---
import type { Project } from "../types/github";
import profile from "../assets/mini-profile.webp";
import { Image } from "astro:assets";

export interface Props {
    project: Project;
}

const { project } = Astro.props;

const pushDate = new Date(project.pushed_at).toLocaleDateString("fr-FR", {
    month: "short",
    year: "numeric",
});
---

<a
    href={project.html_url}
    target="_blank"
    rel="noopener noreferrer"
    class="project-card group"
    aria-label={`Voir le projet ${project.name}`}
>
    <div class="glow-layer"></div>

    <header class="project-header">
        <div class="owner-info">
            <Image src={profile} alt="" width={32} height={32} class="avatar" />
            <h3 class="project-name">{project.name}</h3>
        </div>

        {
            project.language && (
                <span class="language-badge">{project.language}</span>
            )
        }
    </header>

    <p class="project-description">
        {
            project.description ||
                "Exploration technique sans description publique."
        }
    </p>

    <footer class="project-footer">
        <div class="stats">
            <span class="stat-item" title="Étoiles GitHub">
                <svg
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <polygon
                        points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
                    ></polygon>
                </svg>
                {project.stargazers_count}
            </span>
        </div>
        <span class="date-info">Màj {pushDate}</span>
    </footer>
</a>

<style>
    .project-card {
        position: relative;
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        background: rgba(var(--bg), 0.5);
        border: 1px solid rgba(var(--accent), 0.1);
        border-radius: var(--radius-md);
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        overflow: hidden;
    }

    .project-card:hover {
        border-color: rgba(var(--accent), 0.4);
        transform: translateY(-4px);
        background: rgba(var(--accent), 0.03);
        box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.5);
    }

    .glow-layer {
        position: absolute;
        inset: 0;
        background: radial-gradient(
            circle at top right,
            rgba(var(--accent), 0.05),
            transparent 70%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    .project-card:hover .glow-layer {
        opacity: 1;
    }

    .project-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1rem;
        z-index: 1;
    }

    .owner-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        min-width: 0;
    }

    .avatar {
        border-radius: 50%;
        border: 1px solid rgba(var(--accent), 0.2);
        flex-shrink: 0;
    }

    .project-name {
        margin: 0 !important;
        font-size: 1.1rem !important;
        color: rgb(var(--accent));
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .language-badge {
        font-family: var(--font-title);
        font-size: 0.7rem;
        text-transform: lowercase;
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        background: rgba(var(--accent), 0.1);
        color: rgb(var(--accent));
        border: 1px solid rgba(var(--accent), 0.2);
        white-space: nowrap;
    }

    .project-description {
        flex-grow: 1;
        font-size: 0.9rem !important;
        color: rgba(var(--text), 0.7);
        line-height: 1.5;
        margin-bottom: 1.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .project-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-family: var(--font-title);
        font-size: 0.75rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(var(--accent), 0.05);
        color: rgba(var(--text), 0.5);
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .stat-item svg {
        width: 14px;
        height: 14px;
        color: rgb(var(--accent));
    }

    @media (max-width: 640px) {
        .project-card {
            padding: 1.25rem;
        }

        .project-header {
            flex-direction: row;
            gap: 0.5rem;
        }

        .project-name {
            font-size: 1rem !important;
        }

        .project-description {
            -webkit-line-clamp: 2;
            font-size: 0.85rem !important;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .project-card {
            transition: none;
        }
        .project-card:hover {
            transform: none;
        }
    }
</style>
