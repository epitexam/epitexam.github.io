---
export interface Props {
    project: {
        id: number;
        name: string;
        description: string;
        html_url: string;
        language: string | null;
        stargazers_count: number;
        pushed_at: string;
        owner: {
            login: string;
            avatar_url: string;
        };
    };
}

const { project } = Astro.props;
---

<a
    href={project.html_url}
    target="_blank"
    rel="noopener noreferrer"
    class="project-card"
>
    <div class="project-header">
        <div class="owner-info">
            <img
                src={project.owner.avatar_url}
                alt={`${project.owner.login} avatar`}
                class="avatar"
            />
            <span class="project-name">{project.name}</span>
        </div>

        {
            project.language && (
                <span class="language-badge">{project.language}</span>
            )
        }
    </div>

    <p class="project-description">
        {project.description || "No description provided."}
    </p>

    <div class="project-footer">
        <span>‚≠ê {project.stargazers_count}</span>
        <span>üìÖ {new Date(project.pushed_at).toLocaleDateString()}</span>
    </div>
</a>

<style>
    .project-card {
        display: block;
        padding: 1rem;
        border-radius: 1rem;
        border: 1px solid rgba(0, 255, 150, 0.25);
        background: radial-gradient(
            ellipse at top left,
            rgba(25, 35, 30, 0.35),
            rgba(10, 15, 10, 0.15) 70%
        );
        backdrop-filter: blur(12px) saturate(160%);
        transition: all 0.35s ease;
        box-shadow:
            inset 0 0 10px rgba(0, 255, 150, 0.05),
            0 0 20px rgba(0, 255, 150, 0.08);
        text-decoration: none;
        color: rgb(var(--text));
    }

    .project-card:hover {
        transform: translateY(-4px);
        box-shadow:
            inset 0 0 15px rgba(0, 255, 150, 0.05),
            0 0 25px rgba(0, 255, 150, 0.15);
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .owner-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        min-width: 0;
    }

    .avatar {
        width: 1.5rem;
        height: 1.5rem;
        border-radius: 9999px;
        flex-shrink: 0;
    }

    .project-name {
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .language-badge {
        font-size: 0.75rem;
        background: rgba(0, 255, 150, 0.1);
        color: rgb(0, 255, 150);
        padding: 0.2rem 0.5rem;
        border-radius: 0.6rem;
        border: 1px solid rgba(0, 255, 150, 0.25);
        flex-shrink: 0;
    }

    .project-description {
        font-size: 0.875rem;
        color: rgb(var(--text) / 0.8);
        line-height: 1.3;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .project-footer {
        display: flex;
        justify-content: space-between;
        font-size: 0.75rem;
        color: rgb(var(--text) / 0.6);
    }

    @media (max-width: 480px) {
        .project-card {
            padding: 0.75rem;
        }

        .project-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.25rem;
        }

        .project-footer {
            flex-direction: column;
            gap: 0.25rem;
            align-items: flex-start;
        }
    }
</style>
