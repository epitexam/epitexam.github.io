---
import { Image } from "astro:assets";

export interface Props {
    post: {
        id: string;
        data: {
            title: string;
            description: string;
            pubDate: Date;
            updatedDate?: Date;
            heroImage?: any;
            heroImageDescription?: string;
        };
    };
}
const { post } = Astro.props;
---

<article class="latest-post-container">
    <div class="section-header">
        <div class="section-badge">
            <span class="badge-dot"></span>
            <span class="badge-text">Dernier article</span>
        </div>
    </div>

    <a href={`/blog/${post.id}/`} class="post-card">
        {
            post.data.heroImage && (
                <div class="post-image-wrapper">
                    <div class="post-image-container">
                        <Image
                            src={post.data.heroImage}
                            alt={
                                post.data.heroImageDescription ||
                                post.data.title
                            }
                            width={800}
                            height={400}
                            class="post-image"
                            loading="eager"
                        />
                    </div>
                </div>
            )
        }
        <div class="post-content">
            <div class="post-meta">
                <time datetime={post.data.pubDate.toISOString()}>
                    {
                        post.data.pubDate.toLocaleDateString("fr-FR", {
                            year: "numeric",
                            month: "long",
                            day: "numeric",
                        })
                    }
                </time>
                {
                    post.data.updatedDate && (
                        <span class="post-updated">
                            · Mis à jour le{" "}
                            {post.data.updatedDate.toLocaleDateString("fr-FR", {
                                year: "numeric",
                                month: "short",
                                day: "numeric",
                            })}
                        </span>
                    )
                }
            </div>
            <h3 class="post-title">{post.data.title}</h3>
            <p class="post-description">{post.data.description}</p>
            <span class="read-more">
                Lire l'article
                <svg
                    class="arrow-icon"
                    width="16"
                    height="16"
                    viewBox="0 0 16 16"
                    fill="none"
                >
                    <path
                        d="M3.5 8H12.5M12.5 8L8.5 4M12.5 8L8.5 12"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                </svg>
            </span>
        </div>
    </a>
</article>

<style>
    /* ========== CONTAINER ========== */
    .latest-post-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 3rem 0 4rem;
        animation: fadeIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
        animation-delay: calc(var(--stagger-delay, 0.08s) * 3);
    }

    /* ========== SECTION HEADER ========== */
    .section-header {
        width: 100%;
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .section-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.6rem 1.2rem;
        background: rgba(var(--accent), 0.03);
        border: 1px solid rgba(var(--accent), 0.1);
        border-radius: 50px;
        margin-bottom: 0.5rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: rgba(var(--accent), 0.8);
        font-family: var(--font-title);
        font-weight: 500;
        backdrop-filter: blur(4px);
    }

    .badge-dot {
        width: 6px;
        height: 6px;
        background: rgb(var(--accent));
        border-radius: 50%;
        box-shadow: 0 0 8px rgba(var(--accent), 0.6);
        animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            opacity: 1;
            transform: scale(1);
        }
        50% {
            opacity: 0.6;
            transform: scale(0.95);
        }
    }

    .badge-text {
        font-size: 0.75rem;
        letter-spacing: 0.1em;
    }

    /* ========== POST CARD ========== */
    .post-card {
        display: flex;
        flex-direction: column;
        width: 100%;
        background: linear-gradient(
            145deg,
            rgba(10, 12, 20, 0.95) 0%,
            rgba(15, 18, 28, 0.8) 100%
        );
        border: 1px solid rgba(var(--accent), 0.08);
        border-radius: 12px;
        overflow: hidden;
        text-decoration: none !important;
        color: inherit;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        box-shadow:
            0 4px 20px rgba(0, 0, 0, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
        position: relative;
        backdrop-filter: blur(10px);
    }

    .post-card::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 12px;
        padding: 1px;
        background: linear-gradient(
            135deg,
            rgba(var(--accent), 0.1),
            rgba(var(--accent), 0.02),
            rgba(var(--accent), 0.1)
        );
        -webkit-mask:
            linear-gradient(#fff 0 0) content-box,
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
    }

    .post-card:hover {
        transform: translateY(-4px);
        border-color: rgba(var(--accent), 0.15);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.6),
            0 0 0 1px rgba(var(--accent), 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.08);
    }

    /* ========== POST IMAGE ========== */
    .post-image-wrapper {
        width: 100%;
        position: relative;
        overflow: hidden;
        background: rgba(var(--accent), 0.02);
    }

    .post-image-container {
        width: 100%;
        aspect-ratio: 16 / 9;
        overflow: hidden;
        position: relative;
    }

    .post-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        filter: brightness(0.9) contrast(1.1);
        border: none !important;
        border-radius: 0 !important;
        background: none !important;
    }

    .post-card:hover .post-image {
        transform: scale(1.05);
        filter: brightness(1) contrast(1.2);
    }

    /* ========== POST CONTENT ========== */
    .post-content {
        padding: 2.5rem;
        position: relative;
    }

    .post-meta {
        font-size: 0.85rem;
        color: rgba(var(--text), 0.6);
        margin-bottom: 1.25rem;
        font-family: var(--font-title);
        font-weight: 400;
        letter-spacing: -0.01em;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .post-updated {
        opacity: 0.8;
        font-size: 0.8rem;
    }

    .post-title {
        font-size: clamp(1.75rem, 4vw, 2.25rem);
        font-weight: 700;
        margin: 0 0 1.25rem 0 !important;
        line-height: 1.2;
        color: rgb(var(--text));
        transition: color 0.3s ease;
        letter-spacing: -0.02em;
        font-family: var(--font-title);
    }

    .post-card:hover .post-title {
        color: rgb(var(--accent));
        text-shadow: 0 0 20px rgba(var(--accent), 0.3);
    }

    .post-description {
        font-size: 1.1rem;
        line-height: 1.7;
        color: rgba(var(--text), 0.8);
        margin-bottom: 1.75rem !important;
        font-weight: 400;
        letter-spacing: -0.01em;
    }

    /* ========== READ MORE ========== */
    .read-more {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        color: rgb(var(--accent));
        font-family: var(--font-title);
        font-size: 0.95rem;
        font-weight: 600;
        letter-spacing: 0.02em;
        padding: 0.75rem 0;
        position: relative;
        transition: all 0.3s ease;
    }

    .read-more::after {
        content: "";
        position: absolute;
        bottom: 0.5rem;
        left: 0;
        width: 0;
        height: 1px;
        background: linear-gradient(90deg, rgb(var(--accent)), transparent);
        transition: width 0.3s ease;
    }

    .post-card:hover .read-more::after {
        width: 100%;
    }

    .arrow-icon {
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .post-card:hover .arrow-icon {
        transform: translateX(4px);
    }

    /* ========== RESPONSIVE ========== */
    @media (max-width: 768px) {
        .latest-post-container {
            margin: 2rem 0 3rem;
        }

        .section-header {
            margin-bottom: 2rem;
        }

        .section-badge {
            padding: 0.5rem 1rem;
            font-size: 0.7rem;
        }

        .post-content {
            padding: 1.75rem;
        }

        .post-title {
            font-size: 1.6rem !important;
            line-height: 1.3;
        }

        .post-description {
            font-size: 1rem !important;
            line-height: 1.65;
        }

        .post-meta {
            font-size: 0.8rem;
            gap: 0.5rem;
        }

        .read-more {
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        .latest-post-container {
            margin: 1.5rem 0 2.5rem;
        }

        .section-badge {
            padding: 0.4rem 0.9rem;
            gap: 0.4rem;
            letter-spacing: 0.08em;
        }

        .post-content {
            padding: 1.5rem;
        }

        .post-title {
            font-size: 1.4rem !important;
        }

        .post-image-container {
            aspect-ratio: 16 / 10;
        }

        .post-card {
            border-radius: 10px;
        }

        .post-card::before {
            border-radius: 10px;
        }

        .post-meta {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.25rem;
        }

        .post-updated {
            font-size: 0.75rem;
        }
    }

    /* ========== ACCESSIBILITY ========== */
    @media (prefers-reduced-motion: reduce) {
        .latest-post-container {
            animation: none;
        }

        .badge-dot {
            animation: none;
        }

        .post-card,
        .post-image,
        .arrow-icon,
        .read-more,
        .post-title {
            transition: none !important;
        }

        .post-card:hover {
            transform: none;
        }

        .post-card:hover .post-image {
            transform: none;
            filter: none;
        }

        .post-card:hover .arrow-icon {
            transform: none;
        }
    }

    /* ========== DARK MODE SUPPORT ========== */
    @media (prefers-color-scheme: light) {
        .post-card {
            background: linear-gradient(
                145deg,
                rgba(255, 255, 255, 0.95) 0%,
                rgba(245, 248, 255, 0.9) 100%
            );
            border-color: rgba(var(--accent), 0.15);
        }

        .post-title {
            color: rgba(10, 12, 20, 0.95);
        }

        .post-description {
            color: rgba(10, 12, 20, 0.75);
        }
    }
</style>
