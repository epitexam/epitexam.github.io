---
import { GITHUB_URL, SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
	<nav>
		<!-- Logo / Titre -->
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<!-- Bouton hamburger (visible uniquement sur mobile) -->
		<button
			type="button"
			class="menu-toggle"
			aria-expanded="false"
			aria-controls="main-menu"
			aria-label="Toggle navigation menu"
		>
			<span class="sr-only">Menu</span>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
			>
				<line x1="3" y1="6" x2="21" y2="6"></line>
				<line x1="3" y1="12" x2="21" y2="12"></line>
				<line x1="3" y1="18" x2="21" y2="18"></line>
			</svg>
		</button>

		<!-- Conteneur des liens (caché par défaut sur mobile) -->
		<div class="links-container" id="main-menu" aria-hidden="true">
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/tools">Tools</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>

			<div class="social-links">
				<a href={GITHUB_URL} target="_blank" rel="noopener">
					<span class="sr-only">{SITE_TITLE}'s GitHub</span>
					<svg
						viewBox="0 0 16 16"
						aria-hidden="true"
						width="24"
						height="24"
					>
						<path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path>
					</svg>
				</a>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgb(var(--bg));
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
		border-bottom: 1px solid rgba(0, 255, 150, 0.05);
	}

	h2 {
		margin: 0;
		font-size: 1.1em;
	}

	h2 a {
		text-decoration: none;
		color: rgb(var(--text));
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: wrap;
		gap: 1em;
		padding: 0.75em 0;
	}

	.links-container {
		display: flex;
		align-items: center;
		gap: 1.25em;
	}

	.internal-links {
		display: flex;
		gap: 1.25em;
	}

	.internal-links a {
		padding: 0.5em 0.75em;
		color: rgb(var(--text));
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition:
			border-color 0.2s ease,
			color 0.2s ease;
		font-weight: 500;
	}

	.internal-links a:hover,
	.internal-links a.active {
		color: rgb(var(--accent));
		border-bottom-color: rgb(var(--accent));
	}

	.social-links {
		display: flex;
		align-items: center;
	}

	.social-links svg {
		fill: rgb(var(--text));
		transition: fill 0.2s ease;
	}

	.social-links a:hover svg {
		fill: rgb(var(--accent));
	}

	/* Bouton hamburger */
	.menu-toggle {
		display: none;
		background: none;
		border: none;
		color: rgb(var(--text));
		cursor: pointer;
		padding: 0.5em;
		border-radius: 4px;
		transition: background-color 0.2s;
	}

	.menu-toggle:hover,
	.menu-toggle:focus {
		background-color: rgba(0, 255, 150, 0.05);
		outline: 2px solid rgb(var(--accent));
		outline-offset: 2px;
	}

	/* Mobile */
	@media (max-width: 720px) {
		.menu-toggle {
			display: block;
		}

		.links-container {
			display: none;
			flex-direction: column;
			width: 100%;
			gap: 1em;
			margin-top: 1em;
			padding-top: 1em;
			border-top: 1px solid rgba(0, 255, 150, 0.05);
		}

		.links-container.active {
			display: flex;
		}

		.internal-links {
			flex-direction: column;
			width: 100%;
			gap: 0;
		}

		.internal-links a {
			width: 100%;
			padding: 0.8em 0;
			border-bottom: 1px solid rgba(0, 255, 150, 0.05);
			border-radius: 0;
		}

		.internal-links a:last-child {
			border-bottom: none;
		}

		.social-links {
			align-self: center;
			margin-top: 0.5em;
			justify-content: center;
			width: 100%;
		}
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		const toggle = document.querySelector(".menu-toggle");
		const menu = document.getElementById("main-menu");

		if (!toggle || !menu) return;

		toggle.addEventListener("click", () => {
			const isExpanded = toggle.getAttribute("aria-expanded") === "true";
			toggle.setAttribute("aria-expanded", String(!isExpanded));
			menu.setAttribute("aria-hidden", String(isExpanded));
			menu.classList.toggle("active");
		});

		document.addEventListener("click", (e) => {
			if (
				menu.classList.contains("active") &&
				e.target instanceof Node &&
				!menu.contains(e.target) &&
				!toggle.contains(e.target)
			) {
				toggle.setAttribute("aria-expanded", "false");
				menu.setAttribute("aria-hidden", "true");
				menu.classList.remove("active");
			}
		});
	});
</script>
