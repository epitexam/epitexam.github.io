---
export interface Props {
  tech: string;
}

const { tech } = Astro.props;
---

<span class="stack-item">{tech}</span>

<style>
.stack-item {
  position: relative;
  display: inline-block;
  padding: 0.5rem 1.2rem;
  font-size: 0.9rem;
  border-radius: 0.8rem;
  border: 1px solid rgba(0, 255, 150, 0.25);
  background: radial-gradient(ellipse at top left, rgba(25, 35, 30, 0.35), rgba(10, 15, 10, 0.15) 70%);
  backdrop-filter: blur(10px) saturate(160%);
  box-shadow: inset 0 0 10px rgba(0, 255, 150, 0.05), 0 0 15px rgba(0, 255, 150, 0.08);
  color: rgb(0, 255, 150);
  transition: all 0.3s ease;
}

.stack-item:hover {
  border-color: rgba(0, 255, 150, 0.6);
  box-shadow: 0 0 20px rgba(0, 255, 150, 0.15), inset 0 0 20px rgba(0, 255, 150, 0.08);
  transform: translateY(-2px) scale(1.03);
  text-shadow: 0 0 8px rgba(0, 255, 150, 0.4);
}
</style>
