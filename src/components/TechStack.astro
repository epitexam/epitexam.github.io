---
export interface Props {
  tech: string;
}

const { tech } = Astro.props;
---

<span class="stack-item mx-2" data-stack>{tech}</span>

<style>
  .stack-item {
    --accent: 0, 255, 150;

    position: relative;
    display: inline-block;
    padding: 0.5rem 1.2rem;
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    text-transform: capitalize;
    color: rgb(var(--accent));

    border-radius: 0.8rem;
    border: 1px solid rgba(var(--accent), 0.25);

    background: linear-gradient(
      135deg,
      rgba(25, 35, 30, 0.45) 0%,
      rgba(10, 15, 10, 0.25) 100%
    );
    backdrop-filter: blur(14px) saturate(180%);
    box-shadow: inset 0 0 10px rgba(var(--accent), 0.08);

    transition:
      transform 0.4s cubic-bezier(0.22, 1, 0.36, 1),
      box-shadow 0.4s ease,
      border-color 0.4s ease,
      color 0.4s ease;
    cursor: default;
    user-select: none;
    overflow: hidden;
    isolation: isolate;
  }

  .stack-item::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: radial-gradient(
      rgba(255, 255, 255, 0.03) 1px,
      transparent 1px
    );
    background-size: 3px 3px;
    mix-blend-mode: overlay;
    opacity: 0.25;
    pointer-events: none;
  }

  .stack-item::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      120deg,
      transparent 0%,
      rgba(var(--accent), 0.15) 45%,
      transparent 100%
    );
    transform: translateX(-150%) skewX(-10deg);
    opacity: 0;
    pointer-events: none;
    animation: shimmer 6s infinite linear;
  }

  .stack-item:hover {
    border-color: rgba(var(--accent), 0.6);
    transform: translateY(-3px) scale(1.05);
    color: rgb(var(--accent));
    text-shadow:
      0 0 8px rgba(var(--accent), 0.4),
      0 0 14px rgba(var(--accent), 0.25);
    box-shadow:
      0 0 25px rgba(var(--accent), 0.2),
      inset 0 0 20px rgba(var(--accent), 0.1);
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-150%) skewX(-10deg);
      opacity: 0.05;
    }
    50% {
      transform: translateX(150%) skewX(10deg);
      opacity: 0.1;
    }
    100% {
      transform: translateX(150%) skewX(10deg);
      opacity: 0;
    }
  }

  .stack-item[data-stack*="React"] {
    --accent: 97, 218, 251;
  }
  .stack-item[data-stack*="Vue"] {
    --accent: 66, 184, 131;
  }
  .stack-item[data-stack*="Svelte"] {
    --accent: 255, 70, 0;
  }
  .stack-item[data-stack*="Astro"] {
    --accent: 255, 125, 0;
  }
  .stack-item[data-stack*="Tailwind"] {
    --accent: 56, 189, 248;
  }
  .stack-item[data-stack*="TypeScript"] {
    --accent: 49, 120, 198;
  }
  .stack-item[data-stack*="Python"] {
    --accent: 53, 114, 165;
  }
  .stack-item[data-stack*="Rust"] {
    --accent: 255, 100, 50;
  }
  .stack-item[data-stack*="Next"] {
    --accent: 255, 255, 255;
  }
</style>
