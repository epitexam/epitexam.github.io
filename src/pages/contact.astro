---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

const success = Astro.url.searchParams.get("success") === "true";
---

<!doctype html>
<html lang="fr">
    <head>
        <BaseHead
            title={`${SITE_TITLE} - Contact`}
            description={SITE_DESCRIPTION}
        />
    </head>
    <body
        class="flex flex-col min-h-screen bg-[rgb(var(--bg))] text-[rgb(var(--text))] font-mono"
    >
        <Header />

        <main
            class="flex flex-col items-center text-center animate-fadeIn max-w-xl w-full mx-auto p-6"
        >
            <h1 class="glow-text text-3xl font-bold mb-4">Contactez-moi</h1>
            <p class="mb-6 text-[rgba(var(--text),0.9)]">
                Si vous avez un projet, une question ou souhaitez juste dire
                bonjour, envoyez-moi un message. Je vous répondrai dès que
                possible.
            </p>

            {
                success && (
                    <div class="mb-6 p-4 border border-[rgb(var(--accent))] bg-[rgba(var(--accent),0.1)] rounded text-[rgb(var(--accent))] font-semibold animate-pulse">
                        Merci ! Votre message a bien été envoyé.
                    </div>
                )
            }

            <form
                action="https://formspree.io/f/xovgkrbn"
                method="POST"
                class="flex flex-col gap-4 w-full"
                id="contactForm"
            >
                <input
                    type="hidden"
                    name="_next"
                    value={`${Astro.url.origin}${Astro.url.pathname}?success=true`}
                />

                <input
                    type="hidden"
                    name="_subject"
                    value={`Nouveau message de contact - ${SITE_TITLE}`}
                />

                <input
                    type="text"
                    name="_gotcha"
                    style="display:none"
                    tabindex="-1"
                    autocomplete="off"
                />

                <label class="flex flex-col w-full text-left">
                    Votre email :
                    <input
                        type="email"
                        name="email"
                        required
                        placeholder="exemple@domaine.com"
                        class="mt-1 p-2 rounded border border-[rgba(var(--accent),0.25)] bg-[rgba(0,0,0,0.25)] focus:outline-none focus:border-[rgb(var(--accent))] focus:shadow-[0_0_15px_rgba(var(--accent),0.6)] invalid:border-red-500 invalid:text-red-500 transition-all"
                    />
                </label>

                <label class="flex flex-col w-full text-left">
                    Votre message :
                    <textarea
                        name="message"
                        required
                        rows="6"
                        placeholder="Écrivez votre message ici..."
                        class="mt-1 p-2 rounded border border-[rgba(var(--accent),0.25)] bg-[rgba(0,0,0,0.25)] focus:outline-none focus:border-[rgb(var(--accent))] focus:shadow-[0_0_15px_rgba(var(--accent),0.6)] transition-all resize-y min-h-[150px]"
                    ></textarea>
                </label>

                <button
                    type="submit"
                    class="mt-2 border border-[rgb(var(--accent))] text-[rgb(var(--accent))] rounded px-4 py-2 font-semibold hover:bg-[rgba(var(--accent),0.1)] hover:shadow-[0_0_20px_rgba(var(--accent),0.6)] disabled:opacity-50 disabled:cursor-not-allowed transition-all cursor-pointer"
                >
                    Envoyer
                </button>
            </form>
        </main>

        <Footer />

        <script>
            const form = document.getElementById(
                "contactForm",
            ) as HTMLFormElement;

            if (form) {
                form.addEventListener("submit", (e) => {
                    const submitButton = form.querySelector<HTMLButtonElement>(
                        'button[type="submit"]',
                    );
                    if (submitButton) {
                        submitButton.disabled = true;
                        submitButton.textContent = "Envoi en cours...";
                        submitButton.classList.add("animate-pulse");
                    }
                });
            }
        </script>
    </body>
</html>
