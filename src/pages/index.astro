---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import GitHubProject from "../components/GitHubProject.astro";
import { getCollection } from "astro:content";
import {
	SITE_DESCRIPTION,
	SITE_TITLE,
	GITHUB_URL,
} from "../consts";
import { Image } from "astro:assets";
import profile from "../assets/profile.webp";
import type { Project } from "../types/github";

const username = SITE_TITLE.toLowerCase().replace(/\s+/g, "");
let projects: Project[] = [];

if (import.meta.env.SSR) {
	try {
		const token = import.meta.env.TOKEN_GITHUB;
		const response = await fetch(
			`https://api.github.com/users/${username}/repos?sort=pushed&per_page=6`,
			{
				headers: token ? { Authorization: `token ${token}` } : {},
				signal: AbortSignal.timeout(5000),
			},
		);
		if (response.ok) {
			projects = (await response.json()) as Project[];
		}
	} catch (error) {
		projects = [];
	}
}

// Récupération du dernier article de blog
const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const latestPost = posts[0];
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>

	<body class="bg-[rgb(var(--bg))]">
		<Header />

		<main class="stable-layout animate-fadeIn">
			<section class="hero-v">
				<div class="avatar-container">
					<a 
						href={GITHUB_URL} 
						target="_blank" 
						rel="noopener noreferrer"
						class="avatar-link"
						aria-label="Voir mon profil GitHub"
					>
						<Image
							src={profile}
							alt="Photo de profil"
							width={120}
							height={120}
							class="avatar-img"
							loading="eager"
							fetchpriority="high"
						/>
					</a>
					<span class="profile-handle">@{SITE_TITLE}</span>
				</div>

				<h1 class="hero-title">
					Développeur Web<br />
					<span class="title-accent">Full-Stack</span>
				</h1>

				<p class="hero-description">
					Passionné par l'embarqué, le web et les systèmes connectés.<br />
					Je conçois des solutions performantes du frontend au backend.
				</p>

				<div class="cta-group">
					<a
						href={GITHUB_URL}
						target="_blank"
						rel="noopener noreferrer"
						class="btn-pill btn-solid"
					>
						<span class="btn-icon">→</span>
						GitHub
					</a>
					<a href="/blog" class="btn-pill btn-outline">
						Blog technique
					</a>
				</div>

				<div class="hash-list">
					<span>#WebDev</span>
					<span>#LowLevel</span>
					<span>#Embedded</span>
					<span>#Backend</span>
					<span>#DevOps</span>
				</div>
			</section>

			{latestPost && (
				<section class="latest-post-v">
					<div class="section-header">
						<div class="section-badge">
							<span class="badge-dot"></span>
							<span class="badge-text">Dernier article</span>
						</div>
					</div>

					<a href={`/blog/${latestPost.id}/`} class="post-card">
						{latestPost.data.heroImage && (
							<div class="post-image-container">
								<Image
									src={latestPost.data.heroImage}
									alt={latestPost.data.heroImageDescription || latestPost.data.title}
									width={800}
									height={400}
									class="post-image"
									loading="lazy"
								/>
							</div>
						)}
						<div class="post-content">
							<div class="post-meta">
								<time datetime={latestPost.data.pubDate.toISOString()}>
									{latestPost.data.pubDate.toLocaleDateString('fr-FR', {
										year: 'numeric',
										month: 'long',
										day: 'numeric'
									})}
								</time>
								{latestPost.data.updatedDate && (
									<span class="post-updated">
										· Mis à jour le {latestPost.data.updatedDate.toLocaleDateString('fr-FR', {
											year: 'numeric',
											month: 'short',
											day: 'numeric'
										})}
									</span>
								)}
							</div>
							<h3 class="post-title">{latestPost.data.title}</h3>
							<p class="post-description">{latestPost.data.description}</p>
							<span class="read-more">
								Lire l'article
								<span class="arrow">→</span>
							</span>
						</div>
					</a>

					<div class="blog-footer">
						<a href="/blog" class="view-all-link">
							Voir tous les articles
							<span class="arrow">→</span>
						</a>
					</div>
				</section>
			)}

			<section class="projects-v">
				<div class="projects-header">
					<div class="section-badge">
						<span class="badge-dot"></span>
						<span class="badge-text">Projets récents</span>
					</div>
					<h2 class="section-title">Mes derniers projets</h2>
					<p class="section-subtitle">
						Une sélection de mes projets les plus récents sur GitHub
					</p>
				</div>

				<div class="projects-grid">
					{
						projects.length > 0 ? (
							projects.map((repo, i) => (
								<GitHubProject project={repo} eager={i < 2} />
							))
						) : (
							<div class="projects-fallback">
								<p>Impossible de charger les projets GitHub.</p>
								<a href={GITHUB_URL} target="_blank" rel="noopener noreferrer">
									Voir sur GitHub directement →
								</a>
							</div>
						)
					}
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>

<style>
	.stable-layout {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
		max-width: 960px;
		margin: 0 auto;
		border-left: none !important;
		box-sizing: border-box;
	}

	section {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-bottom: 5rem;
	}

	/* ========== HERO SECTION ========== */
	
	.hero-v {
		padding-top: 2rem;
	}

	.avatar-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-bottom: 2.5rem;
	}

	.avatar-link {
		position: relative;
		display: block;
		margin-bottom: 0.75rem;
		transition: transform 0.3s cubic-bezier(0.23, 1, 0.32, 1);
		border-radius: 50%;
	}

	.avatar-link::after {
		content: "";
		position: absolute;
		inset: -4px;
		border-radius: 50%;
		border: 2px solid transparent;
		transition: border-color 0.3s ease;
	}

	.avatar-link:hover {
		transform: scale(1.05);
	}

	.avatar-link:focus-visible {
		outline: 2px solid rgb(var(--accent));
		outline-offset: 4px;
	}

	.avatar-img {
		display: block;
		border-radius: 50%;
		border: 3px solid rgba(var(--accent), 0.2) !important;
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
		transition: border-color 0.3s ease, box-shadow 0.3s ease;
		background: none !important;
	}

	.avatar-link:hover .avatar-img {
		border-color: rgba(var(--accent), 0.5) !important;
		box-shadow: 0 12px 32px rgba(var(--accent), 0.2);
	}

	.profile-handle {
		font-family: var(--font-title);
		font-size: 0.9rem;
		color: rgba(var(--text), 0.5);
		letter-spacing: 0.05em;
		font-weight: 500;
	}

	.hero-title {
		text-align: center;
		font-size: clamp(2.5rem, 7vw, 4rem);
		line-height: 1.1;
		margin-bottom: 1.5rem;
		max-width: 900px;
		font-weight: 800;
		letter-spacing: -0.02em;
	}

	.title-accent {
		background: linear-gradient(135deg, rgb(var(--accent)), rgba(var(--accent), 0.6));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-description {
		text-align: center;
		max-width: 700px;
		font-size: 1.15rem;
		line-height: 1.8;
		color: rgba(var(--text), 0.75);
		margin-bottom: 3rem;
		font-weight: 400;
	}

	.cta-group {
		display: flex;
		gap: 1rem;
		margin-bottom: 3rem;
	}

	.hash-list {
		display: flex;
		gap: 1.5rem;
		font-family: var(--font-title);
		font-size: 0.8rem;
		color: rgba(var(--text), 0.4);
		letter-spacing: 0.05em;
		font-weight: 500;
	}

	/* ========== BUTTONS ========== */

	.btn-pill {
		padding: 0.9rem 2.5rem;
		border-radius: 50px;
		font-family: var(--font-title);
		font-weight: 600;
		font-size: 0.95rem;
		text-decoration: none !important;
		transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		position: relative;
		overflow: hidden;
	}

	.btn-pill::before {
		content: "";
		position: absolute;
		inset: 0;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), transparent);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.btn-pill::after {
		display: none !important;
	}

	.btn-pill:hover::before {
		opacity: 1;
	}

	.btn-solid {
		background: rgb(var(--text));
		color: rgb(var(--bg));
		box-shadow: 0 4px 16px rgba(var(--text), 0.2);
	}

	.btn-solid:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 24px rgba(var(--text), 0.3);
	}

	.btn-outline {
		border: 2px solid rgba(var(--text), 0.2);
		color: rgb(var(--text));
	}

	.btn-outline:hover {
		transform: translateY(-3px);
		border-color: rgba(var(--accent), 0.5);
		box-shadow: 0 4px 16px rgba(var(--accent), 0.2);
	}

	.btn-icon {
		font-size: 1.2rem;
		transition: transform 0.3s ease;
	}

	.btn-pill:hover .btn-icon {
		transform: translateX(4px);
	}

	/* ========== SECTION HEADERS ========== */

	.section-header,
	.projects-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: rgba(var(--accent), 0.05);
		border: 1px solid rgba(var(--accent), 0.15);
		border-radius: 50px;
		margin-bottom: 1.5rem;
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: rgba(var(--text), 0.6);
		font-family: var(--font-title);
	}

	.badge-dot {
		width: 6px;
		height: 6px;
		background: rgb(var(--accent));
		border-radius: 50%;
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.5; }
	}

	.section-title {
		font-size: clamp(2rem, 5vw, 2.8rem);
		font-weight: 700;
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.section-subtitle {
		font-size: 1.05rem;
		color: rgba(var(--text), 0.6);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	/* ========== LATEST POST SECTION ========== */

	.latest-post-v {
		margin-top: 2rem;
	}

	.post-card {
		display: flex;
		flex-direction: column;
		width: 100%;
		background: linear-gradient(145deg, rgba(var(--bg), 1) 0%, rgba(var(--accent), 0.03) 100%);
		border: 1px solid rgba(var(--accent), 0.15);
		border-radius: 12px;
		overflow: hidden;
		text-decoration: none !important;
		color: inherit;
		transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
	}

	.post-card::after {
		display: none !important;
	}

	.post-card:hover {
		transform: translateY(-4px);
		border-color: rgba(var(--accent), 0.3);
		box-shadow: 0 12px 40px rgba(var(--accent), 0.2);
	}

	.post-image-container {
		width: 100%;
		aspect-ratio: 2 / 1;
		overflow: hidden;
		background: rgba(var(--accent), 0.05);
	}

	.post-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.4s ease;
		border: none !important;
		border-radius: 0 !important;
		background: none !important;
		box-shadow: none !important;
	}

	.post-card:hover .post-image {
		transform: scale(1.05);
	}

	.post-content {
		padding: 2rem;
	}

	.post-meta {
		font-size: 0.85rem;
		color: rgba(var(--text), 0.5);
		margin-bottom: 1rem;
		font-family: var(--font-title);
	}

	.post-updated {
		opacity: 0.7;
	}

	.post-title {
		font-size: clamp(1.5rem, 4vw, 2rem);
		font-weight: 700;
		margin: 0 0 1rem 0 !important;
		line-height: 1.2;
		color: rgb(var(--text));
		transition: color 0.3s ease;
	}

	.post-card:hover .post-title {
		color: rgb(var(--accent));
	}

	.post-description {
		font-size: 1.05rem;
		line-height: 1.7;
		color: rgba(var(--text), 0.7);
		margin-bottom: 1.5rem !important;
	}

	.read-more {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: rgb(var(--accent));
		font-family: var(--font-title);
		font-size: 0.9rem;
		font-weight: 600;
	}

	.read-more .arrow {
		transition: transform 0.3s ease;
	}

	.post-card:hover .read-more .arrow {
		transform: translateX(4px);
	}

	.blog-footer,
	.projects-footer {
		text-align: center;
		padding-top: 2rem;
		border-top: 1px solid rgba(var(--accent), 0.1);
		margin-top: 1rem;
	}

	.view-all-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: rgba(var(--text), 0.7);
		font-family: var(--font-title);
		font-size: 0.95rem;
		text-decoration: none !important;
		transition: all 0.3s ease;
		padding: 0.75rem 1.5rem;
		border-radius: 8px;
	}

	.view-all-link::after {
		display: none !important;
	}

	.view-all-link:hover {
		color: rgb(var(--accent));
		background: rgba(var(--accent), 0.05);
	}

	.view-all-link .arrow {
		transition: transform 0.3s ease;
		font-size: 1.1rem;
	}

	.view-all-link:hover .arrow {
		transform: translateX(4px);
	}

	/* ========== PROJECTS SECTION ========== */

	.projects-v {
		margin-top: 2rem;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5rem;
		width: 100%;
		margin-bottom: 2rem;
	}

	.projects-fallback {
		grid-column: span 2;
		padding: 4rem 2rem;
		border: 2px dashed rgba(var(--accent), 0.1);
		border-radius: 12px;
		text-align: center;
		background: rgba(var(--accent), 0.02);
	}

	.projects-fallback p {
		color: rgba(var(--text), 0.5);
		margin-bottom: 1.5rem;
		font-size: 1.05rem;
	}

	.projects-fallback a {
		color: rgb(var(--accent));
		font-weight: 600;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.projects-fallback a:hover {
		color: rgb(var(--text));
	}

	/* ========== RESPONSIVE ========== */

	@media (max-width: 768px) {
		.projects-grid {
			grid-template-columns: 1fr;
		}
		
		.projects-fallback {
			grid-column: span 1;
		}

		.hero-v {
			padding-top: 1rem;
		}

		.hero-title {
			font-size: 2.2rem;
		}

		.hero-description {
			font-size: 1rem;
			line-height: 1.7;
		}

		.hero-description br {
			display: none;
		}

		.cta-group {
			flex-direction: column;
			width: 100%;
			max-width: 300px;
		}

		.btn-pill {
			text-align: center;
			justify-content: center;
		}

		.hash-list {
			flex-wrap: wrap;
			justify-content: center;
			gap: 1rem;
			font-size: 0.75rem;
		}

		.section-title {
			font-size: 1.8rem;
		}

		.section-subtitle {
			font-size: 0.95rem;
		}

		.post-content {
			padding: 1.5rem;
		}

		.post-title {
			font-size: 1.5rem !important;
		}

		.post-description {
			font-size: 0.95rem !important;
		}
	}

	@media (max-width: 480px) {
		.avatar-img {
			width: 100px;
			height: 100px;
		}

		section {
			margin-bottom: 3rem;
		}

		.latest-post-v,
		.projects-v {
			margin-top: 1rem;
		}

		.post-image-container {
			aspect-ratio: 16 / 10;
		}
	}

	/* ========== ACCESSIBILITY ========== */

	@media (prefers-reduced-motion: reduce) {
		.avatar-link,
		.btn-pill,
		.btn-icon,
		.view-all-link .arrow,
		.read-more .arrow,
		.post-card,
		.post-image {
			transition: none !important;
		}

		.badge-dot {
			animation: none !important;
		}
	}
</style>