---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body {
				display: flex;
				flex-direction: column;
				min-height: 100vh;
			}
			main {
				flex-grow: 1;
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				max-width: 960px;
				width: 100%;
				margin: auto;
				padding: 0 1.5rem;
			}

			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
				justify-content: center;
				width: 100%;
			}

			ul li::before {
				content: none !important;
			}

			ul li {
				width: calc(50% - 1rem);
				text-align: center;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}

			.image-container {
				aspect-ratio: 2 / 1;
				width: 100%;
				overflow: hidden;
				position: relative;
				margin-bottom: 0.75rem;
				border-radius: 10px;
				border: 1px solid rgba(255, 255, 255, 0.05);
			}

			.image-container img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: center;
				border-radius: inherit;
			}

			ul li:first-child {
				width: 100%;
				margin-bottom: 1.5rem;
			}

			ul li:first-child .image-container {
				border-radius: 12px;
				margin-top: 10px;
			}

			ul li:first-child .title {
				font-size: 2.369rem;
			}

			ul li a {
				display: block;
				color: inherit;
			}
			.title {
				margin: 0;
				color: rgb(var(--text));
				line-height: 1.2;
				font-weight: 600;
			}
			.date {
				margin: 0.4em 0 0;
				color: rgba(var(--text), 0.65);
				font-size: 0.95em;
			}
			ul li a:hover .title,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul li a:hover .image-container {
				box-shadow: 0 4px 16px rgba(0, 0, 0, 0.5);
				transform: translateY(-2px);
				border-color: rgba(var(--accent), 0.5);
			}

			@media (max-width: 720px) {
				ul {
					gap: 1rem;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 1rem;
				}
				ul li:first-child .title {
					font-size: 1.8em;
				}
				.image-container {
					aspect-ratio: 16 / 9;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<div class="image-container">
											<Image
												width={960}
												height={480}
												src={post.data.heroImage}
												alt={`Image de couverture pour l'article ${post.data.title}`}
											/>
										</div>
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate
											date={post.data.pubDate}
										/>
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
